    "sources": "https://github.com/supertassu/arrow-count-displayer",
    "issues": "https://github.com/supertassu/arrow-count-displayer/issues"
  },

  "license": "MIT",
  "icon": "assets/arrowcounter/icon.png",

  "environment": "client",
  "entrypoints": {
    "main": [
      "me.tassu.arrowcounter.ArrowCounterMod"
    ]
  },
  "mixins": [
    "mixins.arrowcounter.json"
